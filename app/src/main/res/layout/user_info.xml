<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:id="@+id/profile_relative">
        <TextView
            android:id="@+id/profile_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Profile"
            android:textSize="60dp"
            android:gravity="center" />
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/apj"
            android:layout_toRightOf="@+id/profile_textview"
            android:scaleType="fitXY"
            android:background="@color/colorBrown"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroolviewuserinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/profile_relative"
        android:layout_marginTop="4dp"
        android:fillViewport="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">
                <FrameLayout
                    android:id="@+id/framelayoutoneuserinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userinfo_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/profile_24dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp">

                        <TextView
                            android:id="@+id/text_view_userinfo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Mrutyunjay Swain"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_view_userinfo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text_view_userinfo1"
                            android:layout_marginTop="5dp"
                            android:text="9937117257"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/text_view_userinfo3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/text_view_userinfo2"
                            android:layout_marginTop="5dp"
                            android:text="mrutyunjay.busbuddy@gmail.com"
                            android:textSize="20dp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="120dp"
                        android:background="@color/colorBrown" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/framelayouttwouserinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/framelayoutoneuserinfo"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linear_purchase"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_purchase"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/purchase_24dp" />

                            <TextView
                                android:id="@+id/purchase_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="fill"
                                android:text="Purchase Histroy" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lineear_invite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear_purchase"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_invitee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/invite_24dp" />

                            <TextView
                                android:id="@+id/Invite_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="fill"
                                android:text="Invite Friends" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lineear_blog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lineear_invite"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_blog"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/profile_24dp" />

                            <TextView
                                android:id="@+id/blog_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="fill"
                                android:text="Blog" />
                        </LinearLayout>


                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="140dp"
                            android:background="@color/colorBrown" />
                    </RelativeLayout>

                </FrameLayout>


                <FrameLayout
                    android:id="@+id/framelayot_userinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/framelayouttwouserinfo"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linear_primery_policy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_primery_policy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/profile_24dp" />

                            <TextView
                                android:id="@+id/primery_policy_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="fill"
                                android:text="Privecy Policy" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contactus_invite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear_primery_policy"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_contactus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/profile_24dp" />

                            <TextView
                                android:id="@+id/contactus_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="fill"
                                android:text="Contact Us" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="100dp"
                            android:background="@color/colorBrown" />
                    </RelativeLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/framelayot_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/framelayot_userinfo"
                    android:layout_marginTop="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/linear_logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/image_logout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/logout" />

                            <TextView
                                android:id="@+id/logout_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="true"

                                android:gravity="fill"
                                android:text="Logout"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                    </RelativeLayout>

                </FrameLayout>

            </RelativeLayout>
    </ScrollView>

</RelativeLayout>